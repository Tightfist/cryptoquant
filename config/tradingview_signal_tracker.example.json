{
  "app_name": "tradingview_signal_tracker",
  "logging": {
    "level": "DEBUG",
    "file": "tradingview_signal_tracker.log",
    "output_targets": ["file", "console"]
  },
  "webhook": {
    "host": "0.0.0.0",
    "port": 80,
    "path": "/webhook"
  },
  "strategy": {
    "leverage": 10,
    "per_position_usdt": 30,
    "take_profit_pct": 0.1,
    "stop_loss_pct": 0.025,
    "trailing_stop": true,
    "trailing_distance": 0.05,
    "unit_type": "quote",
    "enable_symbol_pool": true,
    "default_symbols": ["BTC-USDT-SWAP", "ETH-USDT-SWAP","SWARMS-USDT-SWAP"]
  },
  "symbol_mapping": {
    "BTCUSDT.P": "BTC-USDT-SWAP",
    "ETHUSDT.P": "ETH-USDT-SWAP",
    "SWARMSUSDT.P": "SWARMS-USDT-SWAP"
  }
} 