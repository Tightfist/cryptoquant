{
  "app_name": "funding_arbitrage",
  "logging": {
    "file": "funding_arbitrage.log"
  },
  "strategy": {
    "leverage": 3,
    "min_funding_rate": 0.0001,
    "max_basis": 0.005,
    "target_profit": 0.01,
    "stop_loss": -0.005,
    "max_hold_hours": 24,
    "allow_reverse_arbitrage": false,
    "capital_efficiency": {
      "enabled": true,
      "usage_ratio": 0.8,
      "spot_ratio": 0.3,
      "swap_ratio": 0.7
    }
  },
  "event_loop": {
    "max_workers": 5,
    "check_interval": 60,
    "unwind_check_interval": 300
  },
  "instruments": [
    "BTC-USDT-SWAP",
    "ETH-USDT-SWAP",
    "SOL-USDT-SWAP",
    "AVAX-USDT-SWAP"
  ]
} 